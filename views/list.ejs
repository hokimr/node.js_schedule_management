<%- include('header'); -%>

<body>
    <div class="box" id="heading">
        <h1> <%= day %> </h1>
    </div>

    <div class="box">
        <% newitem.forEach(function(val){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= val %></p>
        </div>
            <% }) %>
    
        <form class="item" action="/" method="post">
            <input type="text" name="list_name" placeholder="New Item" autocomplete="off">
            <button type="submit" name="LIST" value=<%= day %>>+</button>
        </form>
    </div>
</body>
</html>

